

@using BAYILERSATISPROJESI.Models;
@model List<urunSet>

@{
    List<urunSet> sepet = new List<urunSet>();
}




<body>



    <div class="container container-int">



        <div class="row">
            <div class="col-lg-12">

                <hr />
                <div class="col-md-12">
                    <div class="alert alert-primary" role="alert">

                    </div>

                </div>

                <hr />



            </div>

            <div class="col-md-8 col-sm-8">
                <div class="col-md-9">




                    <table class="table table-striped">


                        <tbody>

                            <tr>
                            </tr>
                            @if (Model != null)
                            {
                            <th>ID</th>
                            <th>İSİM</th>
                            <th>FİYAT</th>

                            <th>TOPLAM TUTAR</th>

                            foreach (urunSet item in Model)
                            {

                                sepet.Add(item);
                    <tr>


                        <td>@item.Id</td>
                        <td>@item.Isim</td>
                        <td>@item.Fiyat</td>

                        <td>
                            @{

                                var subtotal = item.Fiyat * item.Miktar;
                            }
                            @subtotal
                        </td>
                        <div style="margin-top:15px">

                            <td>@Html.ActionLink("Sil", "Sil", new { id = item.Id }, new { @class = "btn btn-danger" })<td />


                        </div>

                    </tr>
                               


                            }


                            <tr>
                                <td align="right" colspan="6">Sum</td>
                                <td>
                                    @{
                                        List<urunSet> cart = Model;
                                        var total = cart.Sum(item => item.Fiyat * item.Miktar);
                                    }
                                    @total
                                </td>
                            </tr>
                            <div style="margin-top:15px">

                                @using (Html.BeginForm("SatinAl", "Home", FormMethod.Post))
                                {
                                    <button type="submit"> Siparişi Tamamla</button>

                                }
                            </div>

                        }
                        else
                        {
                            <p>Sepet Boş.</p>
                        }


                            </tbody>
                        </table>

                </div>
            </div>
        </div>



        <div class="text-center">
            <ul class="pagination">
            </ul>
        </div><!-- /.text-center -->



    </div>




    </div><!-- /.container -->








</body>













