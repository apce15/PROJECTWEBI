

@using BAYILERSATISPROJESI.Models;
@model List<urunSet>

@{ 
    List<urunSet> sepet = new List<urunSet>();
}

<body>

    <h3>Cart Page</h3>
    <table cellpadding="2" cellspacing="2" border="1">
        <tr>
            <th>Option</th>
            <th>Id</th>
            <th>Name</th>
            <th>Photo</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Sub Total</th>
        </tr>
        @if (Model != null)
        {
            foreach (urunSet item in Model)
            {

                sepet.Add(item);
                <tr>

                    <td><a href="@Url.Action("Remove", "Cart", new { id = item.Id })">Remove</a></td>
                    <td>@item.Id</td>
                    <td>@item.Isim</td>
                    <td>@item.Fiyat</td>
                    <td>@item.Miktar</td>
                    <td>
                        @{

                            var subtotal = item.Fiyat * item.Miktar;
                        }
                        @subtotal
                    </td>

                </tr>
                <div style="margin-top:15px">

                    @using (Html.BeginForm("SatinAl", "Home", item, FormMethod.Post))
                    {
                        <button type="submit"> Siparişi Tamamla</button>

                    }
                </div>
            }


            <tr>
                <td align="right" colspan="6">Sum</td>
                <td>
                    @{
                        List<urunSet> cart = Model;
                        var total = cart.Sum(item => item.Fiyat * item.Miktar);
                    }
                    @total
                </td>
            </tr>
        }
        else
        {
            <p>Sepet Boş.</p>
        }
    </table>
    <br>

</body>
